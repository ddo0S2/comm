<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvBluetoothStatus"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginStart="20dp"
            android:text="status"

             />

        <ImageButton
            android:id="@+id/resultbox"
            android:layout_width="274dp"
            android:layout_height="60dp"
            android:layout_marginTop="600dp"
            android:layout_marginStart="65dp"
            android:background="@drawable/resultbox" />

        <TextView
            android:id="@+id/resulttext"
            android:layout_width="182dp"
            android:layout_height="52dp"
            android:layout_marginTop="605dp"
            android:layout_marginStart="140dp"
            android:text="@string/start"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/resultbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnConnect"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-60dp"
            android:text="연결하기"
            android:textSize="30sp" />

        <View
            android:id="@+id/capbox"
            android:layout_width="302dp"
            android:layout_height="404dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/capbox" />

        <ImageView
            android:id="@+id/free_icon_capacitor_4505420_1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="220dp"
            android:layout_marginStart="50dp"
            android:contentDescription="free_icon_capacitor_4505420_1"
            android:src="@drawable/free_icon_capacitor_4505420_1" />

        <TextView
            android:id="@+id/tvReceiveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive"
            android:layout_marginTop="290dp"
            android:layout_marginStart="140dp"
            android:textSize="35dp" />

        <ImageView android:id="@+id/image_4"
            android:src="@drawable/image_4"
            android:contentDescription="image_4"
            android:layout_marginStart="100dp"
            android:layout_marginTop="90dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <View   android:id="@+id/top"
            android:background="@drawable/top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="410dp"
            android:layout_height="25dp" />
        <View   android:id="@+id/bottom"
            android:background="@drawable/top"
            android:layout_marginStart="0dp"
            android:layout_marginTop="705dp"
            android:layout_width="410dp"
            android:layout_height="25dp" />
        <ImageView android:id="@+id/free_icon_right_arrow_271228_1"
            android:src="@drawable/back"
            android:contentDescription="free_icon_right_arrow_271228_1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="650dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView android:id="@+id/free_icon_task_list_6800733_1"
            android:src="@drawable/list"
            android:contentDescription="free_icon_task_list_6800733_1"
            android:layout_marginStart="350dp"
            android:layout_marginTop="650dp"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <TextView android:id="@+id/capstonetext"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="30dp"
            android:layout_width="183.2dp"
            android:layout_height="23.2dp"
            android:text="@string/capstone"
            />
        <ImageView android:id="@+id/kwlogo"
            android:src="@drawable/kwlogo"
            android:contentDescription="kwlogo"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="34dp"
            android:layout_width="87.62dp"
            android:layout_height="64dp" />

        <ImageView android:id="@+id/bsllogo"
            android:src="@drawable/bsllogo"
            android:contentDescription="logo2"
            android:layout_marginStart="74dp"
            android:layout_marginTop="44dp"
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>