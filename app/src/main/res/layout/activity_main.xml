<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="323dp">

        <ImageView
            android:id="@+id/background"
            android:src="@drawable/background"
            android:contentDescription="background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:scaleType="fitXY" />

        <View
            android:layout_width="400dp"
            android:layout_height="124dp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners" />


        <TextView
            android:id="@+id/tvBluetoothStatus"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="140dp"
            android:text="status" />

        <ImageButton
            android:id="@+id/start"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="680dp"
            android:background="@drawable/resultbox" />

        <TextView
            android:id="@+id/resulttext"
            android:layout_width="56dp"
            android:layout_height="52dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="685dp"
            android:text="@string/measurestart"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="680dp"
            android:background="@drawable/resultbox" />

        <TextView
            android:id="@+id/boxtext"
            android:layout_width="56dp"
            android:layout_height="52dp"
            android:layout_marginStart="245dp"
            android:layout_marginTop="685dp"
            android:text="@string/stop"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btnConnect"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="175dp"
            android:src="@drawable/resultbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnConnect"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-50dp"
            android:text="연결"
            android:textSize="30sp" />

        <View
            android:id="@+id/capbox"
            android:layout_width="302dp"
            android:layout_height="404dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/capbox" />

        <ImageView
            android:id="@+id/free_icon_capacitor_4505420_1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="300dp"
            android:contentDescription="free_icon_capacitor_4505420_1"
            android:src="@drawable/free_icon_capacitor_4505420_1" />

        <TextView
            android:id="@+id/tvReceiveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="360dp"
            android:text="Cap"
            android:textStyle="bold"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="179dp"
            android:contentDescription="image_4"
            android:src="@drawable/image_4" />

        <View
            android:id="@+id/top"
            android:layout_width="410dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/top" />

        <View
            android:id="@+id/bottom"
            android:layout_width="410dp"
            android:layout_height="25dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="844dp"
            android:background="@drawable/top" />

        <ImageView
            android:id="@+id/free_icon_right_arrow_271228_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="794dp"
            android:contentDescription="free_icon_right_arrow_271228_1"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/free_icon_task_list_6800733_1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="794dp"
            android:contentDescription="free_icon_task_list_6800733_1"
            android:src="@drawable/list" />

        <TextView
            android:id="@+id/capstonetext"
            android:layout_width="183.2dp"
            android:layout_height="23.2dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:text="@string/capstone"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="360dp"
            android:gravity="center"
            android:text="@string/unit"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/kwlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="kwlogo"
            android:src="@drawable/kwlogo" />

        <ImageView
            android:id="@+id/bsllogo"
            android:layout_width="243dp"
            android:layout_height="100dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="35dp"
            android:contentDescription="logo2"
            android:src="@drawable/bsllogo" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
