<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/background"
            android:src="@drawable/background"
            android:contentDescription="background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


        <View
            android:layout_width="400dp"
            android:layout_height="124dp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_corners" />


        <!-- 나머지 뷰들을 추가하십시오 -->

        <!-- 예시로 추가된 뷰 -->
        <View   android:id="@+id/middle"
            android:background="@drawable/middle"
            android:layout_marginStart="60dp"
            android:layout_marginTop="230dp"
            android:layout_width="300dp"
            android:layout_height="330dp"
            />

        <TextView
            android:id="@+id/capstone_capacitance_value_"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="300dp"
            android:layout_width="231dp"
            android:layout_height="145dp"
            android:textStyle="bold"
            android:text="@string/capacitormain"
             />

        <Button
            android:id="@+id/startbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="700dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/startbutton"
            android:onClick="startLargeActivity"
            android:text="시작하기"
            android:textColor="@android:color/white"
            android:textSize="28sp"
             />

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/kwlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="kwlogo"
            android:src="@drawable/kwlogo" />

        <ImageView
            android:id="@+id/bsllogo"
            android:layout_width="243dp"
            android:layout_height="100dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="35dp"
            android:contentDescription="logo2"
            android:src="@drawable/bsllogo" />

        <TextView
            android:id="@+id/capstonetext"
            android:layout_width="183.2dp"
            android:layout_height="23.2dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:text="@string/capstone"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>