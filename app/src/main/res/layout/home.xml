<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/background"
            android:src="@drawable/background"
            android:contentDescription="background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />





        <TextView
            android:id="@+id/_2024capstone"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="58dp"
            android:layout_width="183.2dp"
            android:layout_height="23.2dp"
            android:text="@string/capstone"
             />

        <!-- 나머지 뷰들을 추가하십시오 -->

        <!-- 예시로 추가된 뷰 -->
        <View   android:id="@+id/middle"
            android:background="@drawable/middle"
            android:layout_marginStart="60dp"
            android:layout_marginTop="183dp"
            android:layout_width="300dp"
            android:layout_height="330dp"
            />

        <TextView
            android:id="@+id/capstone_capacitance_value_"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="273dp"
            android:layout_width="231dp"
            android:layout_height="145dp"
            android:text="@string/capacitormain"
             />

        <Button
            android:id="@+id/startbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="700dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/startbutton"
            android:onClick="startLargeActivity"
            android:text="시작하기"
            android:textColor="@android:color/white"
            android:textSize="28sp"
             />

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/top"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/kwlogo"
        android:src="@drawable/kwlogo"
        android:contentDescription="kwlogo"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="34dp"
        android:layout_width="87.62dp"
        android:layout_height="64dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/bsllogo"
        android:src="@drawable/bsllogo"
        android:contentDescription="bsllogo"
        android:layout_marginStart="74dp"
        android:layout_marginTop="45dp"
        android:layout_width="45dp"
        android:layout_height="43.84dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>