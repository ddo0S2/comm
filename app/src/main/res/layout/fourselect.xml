<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:src="@drawable/background"
            android:contentDescription="background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/secondpage_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="74dp"
                android:layout_marginTop="44dp"
                android:contentDescription="logo2"
                 />

            <TextView
                android:id="@+id/_2024capstone"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="58dp"
                android:layout_width="183.2dp"
                android:layout_height="23.2dp"
                android:text="@string/capstone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/top"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <View
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/top"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />


            <RelativeLayout
                android:id="@+id/purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="225dp">

                <ImageButton
                    android:id="@+id/purpose_button"
                    android:layout_width="160dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/purpose"
                    android:contentDescription="purpose"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="191dp"
                android:layout_marginTop="225dp">

                <ImageButton
                    android:id="@+id/way_button"
                    android:layout_width="140dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/way"
                    android:background="@android:color/transparent"
                    android:contentDescription="way" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="422dp">

                <ImageButton
                    android:id="@+id/measure_button"
                    android:layout_width="140dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/measure"
                    android:contentDescription="measure"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="191dp"
            android:layout_marginTop="422dp">

            <ImageButton
                android:id="@+id/list_button"
                android:layout_width="140dp"
                android:layout_height="175dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/list_button"
                android:contentDescription="list_button"
                android:background="@android:color/transparent" />
        </RelativeLayout>





        <ImageView
            android:id="@+id/kwlogo"
            android:layout_width="87.62dp"
            android:layout_height="64dp"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="34dp"
            android:contentDescription="kwlogo"
            android:src="@drawable/kwlogo" />

        <ImageView
            android:id="@+id/bsllogo"
            android:layout_width="45dp"
            android:layout_height="43.84dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="45dp"
            android:contentDescription="bsllogo"
            android:src="@drawable/bsllogo" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>