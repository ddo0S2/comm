<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:src="@drawable/background"
            android:contentDescription="background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/secondpage_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="74dp"
                android:layout_marginTop="44dp"
                android:contentDescription="logo2"
                 />

            <View
                android:layout_width="400dp"
                android:layout_height="124dp"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_corners" />



            <View
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/top"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <View
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/top"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />


            <RelativeLayout
                android:id="@+id/purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="225dp">

                <ImageButton
                    android:id="@+id/purpose_button"
                    android:layout_width="160dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/purpose"
                    android:contentDescription="purpose"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="191dp"
                android:layout_marginTop="225dp">

                <ImageButton
                    android:id="@+id/way_button"
                    android:layout_width="140dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/way"
                    android:background="@android:color/transparent"
                    android:contentDescription="way" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="29dp"
                android:layout_marginTop="422dp">

                <ImageButton
                    android:id="@+id/measure_button"
                    android:layout_width="140dp"
                    android:layout_height="175dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/measure"
                    android:contentDescription="measure"
                    android:background="@android:color/transparent" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="191dp"
            android:layout_marginTop="422dp">

            <ImageButton
                android:id="@+id/list_button"
                android:layout_width="140dp"
                android:layout_height="175dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/list_button"
                android:contentDescription="list_button"
                android:background="@android:color/transparent" />
        </RelativeLayout>





        <ImageView
            android:id="@+id/kwlogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="kwlogo"
            android:src="@drawable/kwlogo" />

        <ImageView
            android:id="@+id/bsllogo"
            android:layout_width="243dp"
            android:layout_height="100dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="35dp"
            android:contentDescription="logo2"
            android:src="@drawable/bsllogo" />

        <TextView
            android:id="@+id/capstonetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="115dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/capstone"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>